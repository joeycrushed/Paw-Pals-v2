<div class="banner-form" style="background-image: linear-gradient(rgba(255,255,255,.3), rgba(255,255,255,.3)),url(https://images.unsplash.com/photo-1551717743-49959800b1f6?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2847&q=80)">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs login-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: 'joe@test.co.uk',
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  placeholder: '123456',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>


    <div class="form-actions login-text">
      <%= f.button :submit, "Log in", class: "btn-pawpals m-3" %>
    </div>
  <% end %>


  <%= render "devise/shared/links" %>
</div>